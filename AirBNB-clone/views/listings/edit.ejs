<% layout("/layouts/boilerPlate.ejs") -%>
<body>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="content">
            <br>
            <h2 style="color: #fe424d;">Edit "<%= list.title %>" here...</h2>
            <br>
            <img src="<%= list.image.url %>" height="300" class="mb-3 card-img-top">
            <br>
        
            <form method="POST" action="/lists/<%= list._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title: </label>
                    <input type="text" name="list[title]" value="<%= list.title %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea name="list[description]" class="form-control"><%= list.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="url" class="form-label">Image link: </label>
                    <input type="text" name="list[image][url]" value="<%= list.image.url %>" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price: </label>
                        <input type="text" name="list[price]" value="<%= list.price %>" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country: </label>
                        <input type="text" name="list[country]" value="<%= list.country %>" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" name="list[location]" value="<%= list.location %>" class="form-control">
                </div>
                <br>
                <button class="btn btn-dark edit-btn">UPDATE</button>
                <br><br>
            </form>
        </div>
    </div>
</div>
</body>
