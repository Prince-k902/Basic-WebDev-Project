
<% layout('/layouts/boilerplate') -%>

<body>
  <div class="container py-2">
    <div class="row justify-content-center">
      <div class="col-md-10">
        
        <h2 class="card-title"><%= list.title %></h2>
        
        <!-- Listing Card -->
        <div class="card shadow-sm">
          <img src="<%= list.image.url %>" class="card-img-top show-img" alt="listing image">

          <div class="card-body">

            <p class="text-muted m-2">
              Location: <strong><%= list.location %>, <%= list.country %></strong>
            </p>

            <p><%= list.description %></p>

            <hr>

            <h4 class="text-success">&#8377; <%= list.price.toLocaleString("en-IN") %> / night</h4>

            <hr>

            <!-- Actions -->
            <div class="d-flex justify-content-between mt-4">
              <a href="/lists/<%= list._id %>/edit" class="btn btn-outline-primary">Edit</a>

              <form method="POST" action="/lists/<%= list._id %>?_method=DELETE" onsubmit="return confirmDelete()">
                <button class="btn btn-outline-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Optional: Delete confirmation -->
  <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete this listing?");
    }
  </script>

</body>
</html>
